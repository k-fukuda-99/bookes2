<main>
  <p id="notice"><%= flash[:notice] %></p>

  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
         <%= form_for(@user) do |f| %>
         <%= render 'books/error', model: @user %>

        <div class="form-group">Name<br>
         <%= f.text_field :name %>
        </div>

        <div class="form-group">Image<br>
         <%= f.file_field :profile_image %>
        </div>

        <div class="form-group">Introduction<br>
         <%= f.text_area :introduction %>
        </div>

        <div class="form-group">
         <%= f.submit "Update User", class:"btn btn-secondary" %>
        </div>

         <% end %>
      </div>
    </div>
  </div>
</main>